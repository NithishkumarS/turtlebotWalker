<launch>

    <include file="$(find turtlebot_gazebo)/launch/turtlebot_world.launch"></include>
    <arg name = "recordBag" default= "false" />

    <node
        pkg="turtlebot_walker"
        name="turtlebot_walker"
        type="turtlebot_walker"
        output="screen"
    />
    <node
        pkg="rosbag"
        name="record"
        type="record"
        args="-a -x /camera/(.*) -O $(find turtlebot_walker)/results/robotOutput.bag"
        if="$(arg recordBag)"
/>

</launch>
